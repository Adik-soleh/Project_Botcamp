    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- style css modified -->
    <link rel="stylesheet" href="assets/css/form.css">
    <link rel="stylesheet" href="assets/css/cards.css">
    <!-- <link rel="stylesheet" href="assets/css/card.css"> -->
  </head>
  <body>
    <!-- navbar bootstrap-->
  
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">
      <img src="https://dumbways.id/assets/images/brandred.png" width="50px" alt="Brand Logo">
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link text-black" aria-current="page" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-black" href="/project">Add Project</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-black" href="testimonial">Testimoni</a>
        </li>
      </ul>
      <div class="d-flex align-items-center">
        <a href="contac" class="btn btn-dark text-white mx-2" type="button">Contact Us</a>
      </div>
    </div>
  </div>
</nav>
<!-- end navbar -->

<!-- card Project -->
<section id="container" class="py-5">
  <div class="container">
    <div class="d-grid gap-2 d-md-flex justify-content-md-start mb-3">
      <a class="btn btn-warning" href="add-project">Create Blog</a>
    </div>

    <div class="row">
      {{#each blog}}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
          <div class="card h-100">
            <a href="/details/{{id}}">
              <img class="rounded mx-auto d-block" src="{{image}}" alt="Blog Image" style="width: 100%; max-height: 400px; object-fit: cover;">
            </a>
            <div class="card-body d-flex flex-column">
              <a href="#"><h5 class="card-title">{{title}}</h5></a>
              <h6 class="card-subtitle mb-2 text-muted">Durasi: {{createdAt}}</h6>
              <p class="card-text">{{content}}</p>
              <div class="container text-center mb-3">
                <div class="row row-cols-auto">
                  <div class="col">{{Cbx1}}</div>
                  <div class="col">{{Cbx2}}</div>
                  <div class="col">{{Cbx3}}</div>
                  <div class="col">{{Cbx4}}</div>
                </div>
              </div>
              <div class="mt-auto d-flex justify-content-between">
                <a href="/edit-project/{{id}}" class="btn btn-dark">Edit</a>
                <a href="/delete-project/{{id}}" class="btn btn-danger">Delete</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</section>


  
  

  <!-- card Project End -->
 
    
    <script src="assets/js/project.js"></script>
    
      <!-- framework cdn -->
      
       
      <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

