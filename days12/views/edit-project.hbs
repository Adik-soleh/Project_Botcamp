    <!-- Form Project -->
        <form style="margin: 5px auto; 
                  background-color: rgb(255, 255, 255); 
                  margin-top: 7%;
                  border-radius: 8px;" 
                  action="/edit-project/{{index}}" method="post" class="p-5" >
        <h1>ADD MY PROJECT</h1>
          <div class="mb-3" >
              <label for="title" class="form-label">Name Project</label>
              <input type="text" class="form-control" name="title" value="{{blog.title}}" >
          </div>
          <div class="row ">
            <div class="col-auto w-50">
              <label for="sDate" class="form-label">First Date</label>
              <input type="datetime-local" class="form-control" name="sDate" >
          </div>
          <div class="col-auto w-50">
              <label for="eDate" class="form-label">End Date</label>
              <input type="datetime-local" class="form-control" name="eDate" >
          </div>
          </div>
          <div class="mb-3">
              <label for="content" class="form-label">Message</label>
              <textarea class="form-control" name="content" rows="3" >{{blog.content}}</textarea>
          </div>
          <div class="row">
            <div class="mb-3 col-12">
              <div class="form-check form-check-inline">
                <input class="form-check-input " type="checkbox" name="Cbx1" value="Java">
                <label class="form-check-label m-2" for="Cbx1">Java</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="Cbx2" value="node.js">
                <label class="form-check-label m-2" for="Cbx2">Node.js</label>
              </div>
            </div>
            <div class="mb-3 col-auto">
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="Cbx3" value="Python">
                <label class="form-check-label m-2" for="Cbx3">Next.js</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="checkbox" name="Cbx4" value="JavaScript">
                <label class="form-check-label m-2" for="Cbx4">JavaScript</label>
              </div>
            </div>
          </div>
          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input class="form-control" type="file" name="image">
          </div>
          <div class="mb3 text-end">
            <button  class="btn btn-success" id="button">Edit</button>
          </div>
      </form>
  
  <!-- form Project end -->
    
